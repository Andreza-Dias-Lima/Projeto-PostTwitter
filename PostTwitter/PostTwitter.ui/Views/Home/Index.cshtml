@model List<PostTwitter.api.Domain.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Consulta Post Twitter</h1>
</div>
<form method="post" action="/Home">
    <div class="form-group">
        <label for="exampleInputTags">Tags de Busca</label>
        <input type="text" class="form-control" id="tag" name="tag" placeholder="itau">
        <small id="emailHelp" class="form-text text-muted">As 100 últimas consultas são feitas pelo <a>https://twitter.com</a></small>
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
    <div class="form-group">
        <label for="exampleInputPassword1">@Model.Count Posts Encontrados</label>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Data</th>
                    <th scope="col">Post</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Local</th>
                    <th scope="col">Qtde. Seguidores</th>
                </tr>
            </thead>
            <tbody>
                <tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Local)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.QtdeSeguidores)
                    </td>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </form>